<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@mipmap/logo_low_opacity"
    tools:context="com.flowfree.levels.Level18x8"
    android:clickable="true">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->





    <Button
        android:layout_width="200dp"
        android:layout_height="63dp"
        android:text="Advanced Pack (8x8)"
        android:id="@+id/level_2_7"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="20dp"
        android:textColor="#029acc"
        android:onClick="advancedButtonPressed"
        android:layout_below="@+id/level_1_7"
        android:layout_alignLeft="@+id/level_1_7"
        android:layout_alignStart="@+id/level_1_7" />
    <Button
        android:layout_width="200dp"
        android:layout_height="63dp"
        android:text="@string/regular"
        android:id="@+id/level_1_7"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:textColor="#029acc"
        android:clickable="true"
        android:onClick="regularButtonPressed"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@mipmap/flow"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/back_level_selection"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"

        android:layout_marginTop="10dp"
        android:onClick="backdButtonPressed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/left_arrow_white" />
</RelativeLayout>

