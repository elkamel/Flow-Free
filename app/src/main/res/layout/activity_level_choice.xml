<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@mipmap/logo_low_opacity"
    tools:context="com.flowfree.levels.Level18x8"
    android:clickable="true">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->





    <Button
        android:layout_width="200dp"
        android:layout_height="63dp"
        android:text="Advanced Pack (8x8)"
        android:id="@+id/advanced_pack"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="48dp"
        android:onClick="advancedButtonPressed"
        android:layout_below="@+id/regular_pack"
        android:layout_alignLeft="@+id/regular_pack"
        android:layout_alignStart="@+id/regular_pack" />
    <Button
        android:layout_width="200dp"
        android:layout_height="63dp"
        android:text="@string/regular"
        android:id="@+id/regular_pack"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:clickable="true"
        android:onClick="regularButtonPressed"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="146dp" />
</RelativeLayout>

